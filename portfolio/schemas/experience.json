{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Experience",
  "description": "Work experience for portfolio display",
  "type": "object",
  "properties": {
    "company": {
      "type": "string",
      "description": "Company or organization name",
      "minLength": 1,
      "maxLength": 200
    },
    "role": {
      "type": "string",
      "description": "Job title or role",
      "minLength": 1,
      "maxLength": 200
    },
    "period": {
      "type": "string",
      "description": "Time period (e.g., 'Jan 2020 - Present')",
      "minLength": 1,
      "maxLength": 100
    },
    "location": {
      "type": ["string", "null"],
      "description": "Optional location",
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "description": "Role description and achievements",
      "minLength": 1,
      "maxLength": 2000
    },
    "technologies": {
      "type": "array",
      "description": "Array of technology tags",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 50
      },
      "minItems": 1,
      "maxItems": 20
    },
    "redirect_url": {
      "type": ["string", "null"],
      "description": "Optional URL to open when card is clicked",
      "format": "uri"
    }
  },
  "required": ["company", "role", "period", "description", "technologies"],
  "additionalProperties": false
}
